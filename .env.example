# EventFolio Configuration
# Copy this file to .env and adjust values

# ============================================
# FTP Configuration
# ============================================
FTP_HOST=10.0.0.2
FTP_PORT=21
FTP_USER=eventuploader
FTP_PASSWORD=your_secure_password_here
FTP_REMOTE_DIR=/srv/event_photos/incoming/
FTP_TIMEOUT=30

# ============================================
# Local Storage
# ============================================
LOCAL_UPLOAD_DIR=/var/app/uploads/

# ============================================
# Security
# ============================================
UPLOAD_TOKEN=change_this_to_a_secure_random_token

# ============================================
# Upload Limits
# ============================================
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_REQUEST=20

# ============================================
# Retry Configuration
# ============================================
MAX_RETRIES=3
RETRY_INTERVAL_MINUTES=5

# ============================================
# Cleanup
# ============================================
# Delete local files after successful FTP transfer (true/false)
DELETE_AFTER_FTP=true

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
